@model FormModule.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-4 offset-2">
            <div class="card">
                <div class="card-header">      
                  <h1 class="text-center text-primary">Add Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="from-controller" placeholder="Enter name"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mobile"></label>
                            <input type="text" asp-for="Mobile" class="from-controller" placeholder="Enter mobile"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="from-controller" placeholder="Enter salary"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="from-controller" placeholder="Enter state" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Country"></label>
                            <input type="text" asp-for="Country" class="from-controller" placeholder="Enter country" />
                        </div>
                        <div class="form-group">
                            
                            <input type="submit"  class="btn btn-sm btn-outline-success float-right" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

