@model IEnumerable<FormModule.Models.Employee>

@{
    ViewData["Title"]="Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Employee Records</h1>
            <a class="btn btn-sm btn-success" asp-controller="Employee"asp-action="Create">Create</a>
            <table class="table table-bordered" >
                <tr class="text-center">
                    <th>EmployeeId</th>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Salary</th>
                    <th>State</th>
                    <th>Country</th>
                </tr>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.Name</td>
                        <td>@d.Mobile</td>
                        <td>@d.Salary</td>
                        <td>@d.State</td>
                        <td>@d.Country</td>
                        <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@d.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                            <a class="btn btn-sm btn-success" asp-controller="Employee" asp-action="Upload" asp-route-id="@d.Id">Upload</a>
                        </td>
                    </tr>                    
                }
            </table>
        </div>
    </div>
</div>
